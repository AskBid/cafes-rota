
<h1>All Cafes</h1>

<div class='cafestable'>
	<%= link_to new_cafe_path do %>
		<div class='cafetile' style='align: center'>
				<h3>Add your own Cafe' +</h3>
		</div>
	<% end %>
	<% @cafes.each do |c| %>
		<%= link_to cafe_path(c) do %>
			<div class='cafetile'>
				<%= image_tag(c.main_image.url, :alt => c.main_image.name) %>
				<div class='cafeid'>
					<p><b><%= c.name %></b></p>
					<text class=location><%= c.location %></text>
				</div>
			</div>
		<% end %>
	<% end %>
</div>