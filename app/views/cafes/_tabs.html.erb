<% @cafes.each do |c| %>
	
	<div class='cafetile'>
		<%= link_to cafe_path(c) do %>
			<%= image_tag(c.main_image.url, :alt => c.main_image.name) %>
		<% end %>
		<div class='cafeid'>
			<%= link_to cafe_path(c) do %>
				<p><b><%= c.name %></b></p>
			<% end %>
			<text class=location><%= c.location %></text>
		</div>
		<% if user_is_authenticated && controller_name == 'visits'%>
			<%= form_for(:visit) do |f| %>
				<%= f.hidden_field :cafe_id, value: c.id%>
				<%= f.hidden_field :user_id, value: current_user.id %>
				<%= f.submit '+', class: 'add' %>
			<% end %>
		<% end %>
	</div>
	
<% end %>