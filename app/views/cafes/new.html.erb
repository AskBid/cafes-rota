<h1>Add a New Cafe</h1>

<!-- using a semicolumned model name will fill the form 
with an empty model without the need to create one -->

<%= form_for(@cafe) do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :location %>
	<%= f.text_field :location %>
	<br>
	<%= f.label :location_url %>
	<%= f.text_field :location_url %>
	<br>
	<br>
	<%= f.submit 'Submit' %>
	<br>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description %>
	<br>
	<br>

	<fieldset>
		<legend>URLs to this Cafe's related websites</legend>
		<%= f.fields_for :links do |link| %>
				<%= link.label link.object.name %>
				<%= link.text_field :url %>
				<br>
		<% end %>
	</fieldset>

<br>

	<fieldset>
		<legend>Images URLs</legend>
		<%= f.fields_for :images do |img| %>
				<%= img.label img.object.name %>
				<%= img.text_field :url %>
		<% end %>
	</fieldset>

<% end %>