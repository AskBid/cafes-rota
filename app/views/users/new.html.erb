<h1>Sign Up</h1>

<br>
<% if flash.alert %>
  <% flash.alert.each do |message| %>
    <p class='flash'><%= message.to_s %> </p>
  <% end %>
<% end %>

<%= form_for(@user, url: '/signup') do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br>
	<br>
	<%= f.submit 'Submit' %>

<% end %>